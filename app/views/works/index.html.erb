<section class="media-spotlight">
  <p>
    List of Works
  </p>

  <p>
    Albums
  </p>

  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @works.where(category: "album").each do |work| %>
        <tr>
          <td>#</td>
          <td><%= work.title %></td>
          <td><%= work.creator %></td>
          <td><%= work.publication_year %></td>
          <td>Upvote</td>
        </tr>
      <% end %>
    </tbody>
  </table>

